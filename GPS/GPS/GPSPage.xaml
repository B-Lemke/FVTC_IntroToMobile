<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:GPS" x:Class="GPS.GPSPage">
	<ScrollView>
        <StackLayout>
            <Label Text="Latitude:" />
            <Label Text="{Binding Latitude}" />
            <Label Text="Longitude:" />
            <Label Text="{Binding Longitude}" />
            <Button x:Name="btnGetLocation" Text="Get My Location" Clicked="HandleGetLocation"/>
            <Button Text="Reset" Clicked="ResetClicked" x:Name="btnReset"/>

        </StackLayout>
    </ScrollView>
</ContentPage>
